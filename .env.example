# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here # or open router api key
# if using Open Router set USE_OPEN_ROUTER=true, otherwise if using OPENAI_API_KEY set it to false)
USE_OPEN_ROUTER=true
# Langfuse Configuration
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com


# Vector Search Configuration
# Set to true to use exact k-NN search (slower but 100% accurate)
# Set to false to use approximate nearest neighbors (faster, default)
USE_EXACT_KNN_SEARCH=true

# Evaluation Configuration
# Set to true to enable automatic response quality evaluation (default: true)
ENABLE_EVALUATION=true
# Minimum overall quality score (1-10) for a response to be considered acceptable (default: 6.0)
QUALITY_THRESHOLD=6.0
